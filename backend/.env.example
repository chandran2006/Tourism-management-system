# ========================================
# Travel Super App - Environment Variables
# ========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=mini

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_change_in_production
JWT_EXPIRATION=86400000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Admin Configuration
ADMIN_SECRET_KEY=RPHM

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Email Configuration (Optional for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=noreply@travelapp.com

# External APIs (Optional for future integration)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# WEATHER_API_KEY=your_weather_api_key
# CURRENCY_API_KEY=your_currency_api_key

# Logging
LOG_LEVEL=info
